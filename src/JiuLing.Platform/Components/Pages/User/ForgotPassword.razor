@page "/u/forgot-password"

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-16">
    <MudPaper Elevation="10" Class="pa-8">
        <MudText Typo="Typo.h4" Class="mb-4" Align="Align.Center">忘记密码</MudText>

        <MudTextField @bind-Value="Email" Label="邮箱" Variant="Variant.Outlined" FullWidth="true" Class="mb-4"
                      Error="@_emailError" ErrorText="@_emailErrorText" />

        <MudLoadingButton @bind-Loading="_loading"
                          Disabled="@_isFinished"
                          OnClick="SendResetLinkAsync"
                          AutoDelay="null"
                          Color="Color.Primary"
                          Variant="Variant.Filled"
                          FullWidth="true">
            重置密码
        </MudLoadingButton>

        <MudText Typo="Typo.body2" Class="mt-4" Align="Align.Center">
            <MudLink Href="/login" Color="Color.Primary">返回登录</MudLink>
        </MudText>
    </MudPaper>
</MudContainer>
