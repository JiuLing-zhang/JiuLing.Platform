<MudDialog>
    <DialogContent>
        @Text
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Submit">确定</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public string Text { get; set; }

    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    void Submit() => MudDialog.Close(DialogResult.Ok(true));
}